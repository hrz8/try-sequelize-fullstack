<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
    <ul>
    <% articles.forEach(i => { %>
        <li><a href="/articles/edit/<%= i.id %>"><%= i.id %></a></li>
        <li>title: <%= i.title %></li>
        <li>article: <%= i.content %></li>
        <li>
          <form action="/articles/remove/<%=i.id%>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
    <% }) %>
    </ul>
    <a href="/articles/create">Back to Create</a>
</body>
</html>